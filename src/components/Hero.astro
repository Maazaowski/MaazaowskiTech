---
import Button from './ui/Button.astro';
---

<section class="relative overflow-hidden py-32">
  <!-- Gradient Background -->
  <div class="absolute inset-0 bg-gradient-to-b from-primary/5 to-transparent"></div>
  
  <!-- Grid Pattern -->
  <div class="absolute inset-0 bg-[linear-gradient(to_right,#8882_1px,transparent_1px),linear-gradient(to_bottom,#8882_1px,transparent_1px)] bg-[size:14px_24px]"></div>

  <div class="container relative z-10">
    <div class="mx-auto max-w-4xl text-center">
      <div class="relative">
        <div class="absolute -left-4 top-0 h-72 w-72 bg-primary/30 rounded-full blur-3xl"></div>
        <div class="absolute -right-4 top-0 h-72 w-72 bg-secondary/30 rounded-full blur-3xl"></div>
        
        <h1 class="relative text-6xl font-bold tracking-tight">
          <span class="bg-gradient-to-r from-primary to-secondary bg-clip-text text-transparent">
            TechMaaz
          </span>
        </h1>
      </div>
      
      <p class="mt-6 text-xl text-gray-400">
        Exploring the intersection of code, creativity, and innovation. Join me on a journey through 
        modern web development, software architecture, and tech insights.
      </p>
      
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <Button href="/blog" variant="primary" size="lg" class="group">
          Explore Blog
          <svg xmlns="http://www.w3.org/2000/svg" class="ml-2 h-4 w-4 transition-transform group-hover:translate-x-1" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </Button>
        <Button href="/projects" variant="outline" size="lg">
          View Projects
        </Button>
      </div>
    </div>
  </div>
</section>