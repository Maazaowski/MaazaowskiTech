---
import type { Project } from '../types';
import { formatDate } from '../utils/date';

interface Props {
  project: Project;
}

const { project } = Astro.props;
---

<article class="bg-white dark:bg-gray-800 rounded-lg shadow-lg overflow-hidden">
  {project.image && (
    <img 
      src={project.image} 
      alt={project.title}
      class="w-full h-48 object-cover"
    />
  )}
  <div class="p-6">
    <h3 class="text-xl font-bold mb-2 text-gray-800 dark:text-gray-100">
      <a href={`/projects/${project.slug}`} class="hover:text-primary">
        {project.title}
      </a>
    </h3>
    <p class="text-gray-600 dark:text-gray-300 mb-4">
      {project.description}
    </p>
    <div class="flex flex-wrap gap-2 mb-4">
      {project.tags.map((tag) => (
        <span class="text-xs bg-primary/10 text-primary px-2 py-1 rounded">
          {tag}
        </span>
      ))}
    </div>
    <div class="flex justify-between items-center">
      <span class="text-sm text-gray-500 dark:text-gray-400">
        {formatDate(project.startDate)}
      </span>
      <div class="space-x-4">
        {project.githubUrl && (
          <a 
            href={project.githubUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary dark:text-gray-300"
          >
            GitHub
          </a>
        )}
        {project.liveUrl && (
          <a 
            href={project.liveUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="text-gray-600 hover:text-primary dark:text-gray-300"
          >
            Live Demo
          </a>
        )}
      </div>
    </div>
  </div>
</article>