---
import AdminLayout from '../../components/admin/AdminLayout';
---

<AdminLayout>
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h3 class="text-lg font-semibold mb-2">Total Posts</h3>
      <p class="text-3xl font-bold text-primary">12</p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h3 class="text-lg font-semibold mb-2">Comments</h3>
      <p class="text-3xl font-bold text-primary">48</p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h3 class="text-lg font-semibold mb-2">Projects</h3>
      <p class="text-3xl font-bold text-primary">5</p>
    </div>
    <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-lg">
      <h3 class="text-lg font-semibold mb-2">Total Views</h3>
      <p class="text-3xl font-bold text-primary">1.2k</p>
